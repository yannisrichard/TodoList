{% extends '::base.html.twig' %}

{%  block body %}
    <nav class="navbar navbar-default" role="navigation">
        <div class="container">
            <ul class="nav navbar-nav">
                <li><a><b>Add an item</b></a></li>
            </ul>
        </div>
    </nav>

    <div class="col-lg-offset-3 col-sm-5">
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        <div class="form-group">
            <label for="title" class="col-sm-2 control-label">{{ form_label(form.title) }}</label>
            <div class="col-sm-10">
                {{ form_widget(form.title, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>
        <div class="form-group">
            <label for="title" class="col-sm-2 control-label">{{ form_label(form.content) }}</label>
            <div class="col-sm-10">
                {{ form_widget(form.content, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>
        <div class="form-group">
            <label for="title" class="col-sm-2 control-label">{{ form_label(form.deadline) }}</label>
            <div class="col-sm-10">
                {{ form_widget(form.deadline) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default">Add</button>
            </div>
        </div>

        {{ form_end(form) }}
    </div>
{% endblock %}